<header class="sticky top-0 z-40 w-full bg-white/90 backdrop-blur shadow">
    <nav class="flex items-center justify-between px-8 py-3">
       
        <div class="flex items-center gap-4">
            <a href="/" class="px-5 py-2.5 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow transition duration-200">airbnb</a>
            

            <% if(isLoggedIN) {%>
                <a href="/homes" class="px-5 py-2.5 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow transition duration-200">Homes</a>
                <a href="/host/add-home" class="px-5 py-2.5 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow transition duration-200">Add Home</a>
                <a href="/favourites" class="px-5 py-2.5 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow transition duration-200">Favourite</a>
                <a href="/host/host-homes" class="px-5 py-2.5 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow transition duration-200">Host Homes</a>
            <% } %>
        </div>

        <div class="flex items-center">
           <% if(isLoggedIN) {%>
                <form action="/logout" method="POST">
                    <input type="submit" value="Logout" class="px-5 py-2.5 bg-red-500 hover:bg-red-600 text-white font-semibold rounded-lg shadow transition duration-200"/>
                </form>
            <% } else { %>

                <a href="/login" class="px-5 py-2.5 bg-blue-500 hover:bg-blue-600 text-white font-semibold rounded-lg shadow transition duration-200">Login</a>
            <% } %>
           
        </div>
    </nav>
</header>