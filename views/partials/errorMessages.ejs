<% if (typeof errorMessages !== 'undefined' && errorMessages.length > 0) { %>
    <ul class="bg-red-100 border border-red-400 text-red-700 py-3 rounded mb-4">
      <% errorMessages.forEach(errorMessage => { %>
        <li class="flex items-center">
          <svg class="w-4 h-4 mr-2 fill-current" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.707-10.293a1 1 0 00-1.414-1.414L8.586 10l-1.293 1.293a1 1 0 001.414 1.414L10 11.414l1.293 1.293a1 1 0 101.414-1.414L11.414 10l1.293-1.293z" clip-rule="evenodd"/>
          </svg>
          <%= errorMessage %>
        </li>
      <% }) %>
    </ul>
  <% } %>
  