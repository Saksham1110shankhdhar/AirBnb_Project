<%- include('../partials/head') %>

<body class="bg-gradient-to-br from-blue-100 via-pink-100 to-yellow-100 min-h-screen">

    <%- include('../partials/nav') %>

    <main>
        <div class="min-h-screen bg-gradient-to-br from-blue-100 via-pink-100 to-yellow-100 flex flex-col items-center justify-center py-8">
            <h1 class="text-4xl font-extrabold text-red-600 mb-8 drop-shadow-lg">All Host Homes</h1>

            <div class="w-full flex flex-wrap gap-8 justify-center">
                <% homes.forEach(home => { %>
                    <div class="bg-white rounded-xl shadow-lg p-6 flex flex-col justify-between items-center w-80">
                        <img src="<%= home.photoUrl %>" alt="Home Photo" class="w-full h-48 object-cover rounded-lg mb-4 border border-gray-200">
                        <h2 class="text-2xl font-bold text-gray-800 mb-2 text-center"><%= home.houseName %></h2>
                        <div class="w-full flex flex-col gap-2 text-gray-700 mb-8">
                            <div>
                                <span class="font-semibold text-lg text-red-600">Price:</span>
                                <span class="font-extrabold text-2xl text-green-600 ml-1">‚Çπ<%= home.price %></span>
                                <span class="text-gray-500 text-sm">/ night</span>
                            </div>
                            <div>
                                <span class="font-semibold"><span class="inline-block align-middle mr-1">üìç</span>Location:</span>
                                <span class="ml-1"><%= home.location %></span>
                            </div>
                            <div>
                                <span class="font-semibold"><span class="inline-block align-middle mr-1 text-yellow-400">‚≠ê</span>Rating:</span>
                                <span class="ml-1 font-bold text-yellow-600"><%= home.rating %></span>
                            </div>
                        </div>

                        <div class="w-full flex gap-2 mt-auto">
                           
                            <a
                                href="/host/edit-home/<%= home.id %>?editing=true"
                                class="flex-1 bg-gradient-to-r from-yellow-300 via-orange-500 to-yellow-200 hover:from-blue-600  hover:via-blue-200 hover:to-blue-500 text-white hover:text-gray-700 font-bold py-3 rounded-2xl shadow-xl transition duration-200  md:text-lg tracking-wide uppercase ring-2 ring-pink-200 hover:ring-yellow-300 focus:outline-none focus:ring-4 focus:ring-yellow-400 text-xl text-center flex items-center justify-center"
                            >
                                Edit
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </main>

</body>
</html>



