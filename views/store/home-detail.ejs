<%- include('../partials/head') %>

<body class="min-h-screen bg-gradient-to-b from-[#FFF6D8] via-[#FFF1C1] to-[#FFE8EC]">

<%- include('../partials/nav') %>

<main class="pt-24 pb-32">

  <!-- HEADER -->
  <section class="max-w-7xl mx-auto px-6 mb-20 text-center">
    <h1 class="text-5xl md:text-6xl font-black tracking-tight
               text-transparent bg-clip-text bg-gradient-to-r from-rose-600 via-pink-500 to-orange-500">
      <%= home.houseName %>
    </h1>
    <p class="mt-4 text-slate-700 text-lg max-w-3xl mx-auto">
      A thoughtfully curated luxury stay in <strong><%= home.location %></strong>,
      crafted for comfort, elegance, and unforgettable moments.
    </p>
  </section>

  <!-- MAIN GRID -->
  <section class="max-w-7xl mx-auto px-6 grid grid-cols-1 lg:grid-cols-3 gap-16">

    <!-- LEFT CONTENT -->
    <div class="lg:col-span-2 space-y-16">

      <!-- IMAGE -->
      <div class="relative rounded-[2.8rem] overflow-hidden shadow-[0_40px_80px_rgba(0,0,0,0.25)] group bg-white">
        <img
          src="<%= home.photoUrl %>"
          alt="<%= home.houseName %>"
          class="w-full h-[500px] object-cover group-hover:scale-[1.06] transition duration-700"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-black/10 to-transparent"></div>

        <div class="absolute bottom-8 left-8 text-white">
          <h2 class="text-3xl font-extrabold drop-shadow-lg">
            <%= home.houseName %>
          </h2>
          <p class="text-pink-200 mt-2 text-lg">
            Location: <%= home.location %>
          </p>
        </div>
      </div>

      <!-- ABOUT -->
      <div class="bg-white/95 backdrop-blur rounded-3xl p-10 shadow-xl border border-rose-200">
        <h3 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-rose-600 to-orange-500 mb-4">
          About this stay
        </h3>

        <p class="text-slate-700 leading-relaxed text-lg">
          Welcome to <strong><%= home.houseName %></strong>, a premium residence designed
          to deliver hotel-level comfort with the warmth of a personal home.
          Ideal for couples, families, or professionals seeking peace, privacy,
          and modern luxury.
        </p>
      </div>

      <!-- FEATURES -->
      <div class="bg-white/95 backdrop-blur rounded-3xl p-10 shadow-xl border border-indigo-200">
        <h3 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-indigo-600 to-purple-600 mb-8">
          What this place offers
        </h3>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 text-slate-700 text-lg">
          <div>High-speed Wi-Fi</div>
          <div>Air conditioning & heating</div>
          <div>Fully equipped kitchen</div>
          <div>24/7 security</div>
          <div>Private parking</div>
          <div>Premium bedding</div>
        </div>
      </div>

      <!-- REVIEWS -->
      <div class="bg-white/95 backdrop-blur rounded-3xl p-10 shadow-xl border border-yellow-200">
        <h3 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-amber-500 to-orange-500 mb-8">
          Guest reviews
        </h3>

        <div class="space-y-6">
          <div class="bg-white p-5 rounded-2xl shadow text-slate-700">
            Rating: 5/5 — “Absolutely loved the stay. Clean, peaceful, and beautifully designed.”
          </div>
          <div class="bg-white p-5 rounded-2xl shadow text-slate-700">
            Rating: 5/5 — “Felt like a boutique hotel. Comfortable beds and great location.”
          </div>
        </div>
      </div>

    </div>

    <!-- RIGHT BOOKING CARD -->
    <aside class="lg:col-span-1">
      <div class="sticky top-28 bg-white/95 backdrop-blur rounded-3xl shadow-xl p-8 space-y-7 border border-slate-200">

        <div class="flex justify-between items-center">
          <div class="text-4xl font-extrabold text-slate-800">
            Rs <%= home.price %>
            <span class="text-base font-medium text-slate-500">/ night</span>
          </div>
          <div class="text-amber-500 font-bold text-lg">
            Rating: <%= home.rating %>
          </div>
        </div>

        <a href="/booking/<%= home._id %>"
          class="w-full block text-center py-4 rounded-2xl
                 text-white font-bold text-lg
                 bg-gradient-to-r from-pink-500 via-rose-500 to-orange-500
                 hover:brightness-110 transition shadow-xl">
         Book Now
       </a>
       
        
        

        <%- include('../partials/add-to-favourite', {
          home: home,
          btnClass: "w-full py-3 rounded-xl bg-slate-900 text-white font-semibold hover:bg-slate-800 transition"
        }) %>

        <a href="/rules/<%= home._id %>"
           class="block w-full text-center py-3 rounded-xl bg-slate-100 text-slate-700 font-semibold
                  hover:bg-slate-200 transition border border-slate-300">
          View House Rules
        </a>

        <p class="text-center text-sm text-slate-500 pt-2">
          Verified listing · Secure booking · Instant confirmation
        </p>

      </div>
    </aside>

  </section>

</main>

</body>
</html>
